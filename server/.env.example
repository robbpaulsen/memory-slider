# Server Configuration
PORT=3000

# Environment
NODE_ENV=development

# Authentication - CHANGE THESE VALUES FOR PRODUCTION
ADMIN_PASSWORD=your_secure_password_here
SESSION_SECRET=generate_random_secret_key_here_min_32_chars

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Image Processing
IMAGE_QUALITY=85
MAX_RESOLUTION_WIDTH=1080
MAX_RESOLUTION_HEIGHT=1090

# Slideshow Configuration
DEFAULT_SLIDESHOW_INTERVAL=15000

# Random Image Configuration
MAX_RECENT_IMAGES=10
IMAGE_CACHE_EXPIRY=60000

# Default Folders
DEFAULT_FOLDERS=evento

# Google Photos Configuration
# Set to 'true' to enable Google Photos integration, 'false' to disable
ENABLE_GOOGLE_PHOTOS=false
GOOGLE_CLIENT_ID=client_id
GOOGLE_CLIENT_SECRET=client_secret
GOOGLE_REDIRECT_URI=redirect_uri
